<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="15dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    >

    <ImageView
        android:id="@+id/imgvw_imagen_producto"
        android:layout_width="150dp"
        android:layout_height="181dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_nombre_producto"
        tools:background="@color/black" />

    <TextView
        android:id="@+id/tv_nombre_producto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Leche Vita" />

    <TextView
        android:id="@+id/tv_descripcion_producto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/imgvw_imagen_producto"
        app:layout_constraintTop_toBottomOf="@+id/tv_nombre_producto"
        tools:text="1 L" />

    <TextView
        android:id="@+id/tv_precio_producto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/textView11"
        app:layout_constraintTop_toBottomOf="@+id/tv_descripcion_producto"
        tools:text="$1.00" />

    <TextView
        android:id="@+id/tv_cantidad_producto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/imgvw_imagen_producto"
        app:layout_constraintTop_toBottomOf="@+id/tv_precio_producto"
        tools:text="100" />

    <Button
        android:id="@+id/btn_aniadir_carrito"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/red"
        android:text="@string/comprar"
        app:layout_constraintStart_toEndOf="@+id/imgvw_imagen_producto"
        app:layout_constraintTop_toBottomOf="@+id/tv_cantidad_producto" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:text="@string/dolar"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/imgvw_imagen_producto"
        app:layout_constraintTop_toBottomOf="@+id/tv_descripcion_producto" />

</androidx.constraintlayout.widget.ConstraintLayout>